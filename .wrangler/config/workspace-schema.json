{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.2.0",
  "description": "Wrangler workspace directory and file structure schema",

  "workspace": {
    "root": ".wrangler",
    "description": "Central wrangler workspace directory containing all project governance and tracking files"
  },

  "directories": {
    "issues": {
      "path": ".wrangler/issues",
      "description": "Issue tracking files (git-tracked)",
      "gitTracked": true,
      "subdirectories": {
        "archived": {
          "path": ".wrangler/issues/archived",
          "description": "Archived closed/cancelled issues"
        }
      }
    },
    "specifications": {
      "path": ".wrangler/specifications",
      "description": "Feature specifications (git-tracked)",
      "gitTracked": true,
      "subdirectories": {
        "archived": {
          "path": ".wrangler/specifications/archived",
          "description": "Archived closed/cancelled specifications"
        }
      }
    },
    "ideas": {
      "path": ".wrangler/ideas",
      "description": "Ideas and proposals not yet promoted to specifications (git-tracked)",
      "gitTracked": true
    },
    "memos": {
      "path": ".wrangler/memos",
      "description": "Reference material, RCAs, lessons learned (git-tracked)",
      "gitTracked": true
    },
    "plans": {
      "path": ".wrangler/plans",
      "description": "Implementation plans and design documents (git-tracked)",
      "gitTracked": true
    },
    "docs": {
      "path": ".wrangler/docs",
      "description": "Auto-generated governance documentation (git-tracked)",
      "gitTracked": true
    },
    "cache": {
      "path": ".wrangler/cache",
      "description": "Runtime cache (gitignored)",
      "gitTracked": false
    },
    "config": {
      "path": ".wrangler/config",
      "description": "Configuration files (git-tracked)",
      "gitTracked": true
    },
    "logs": {
      "path": ".wrangler/logs",
      "description": "Runtime logs (gitignored)",
      "gitTracked": false
    }
  },

  "governanceFiles": {
    "constitution": {
      "path": ".wrangler/CONSTITUTION.md",
      "description": "Immutable design principles - supreme law of the project",
      "required": false,
      "template": "skills/constitution/templates/_CONSTITUTION.md"
    },
    "roadmap": {
      "path": ".wrangler/ROADMAP.md",
      "description": "Strategic multi-phase roadmap",
      "required": false,
      "template": "skills/validating-roadmap/templates/_ROADMAP.md"
    },
    "nextSteps": {
      "path": ".wrangler/ROADMAP_NEXT_STEPS.md",
      "description": "Tactical execution tracker with completion metrics",
      "required": false,
      "template": "skills/validating-roadmap/templates/_ROADMAP__NEXT_STEPS.md"
    }
  },

  "readmeFiles": {
    "issues": {
      "path": ".wrangler/issues/README.md",
      "description": "Issue management guide and metrics",
      "template": "skills/initialize-governance/templates/issues-README.md"
    },
    "specifications": {
      "path": ".wrangler/specifications/README.md",
      "description": "Specification management guide and metrics",
      "template": "skills/initialize-governance/templates/specifications-README.md"
    },
    "memos": {
      "path": ".wrangler/memos/README.md",
      "description": "Memos directory guide"
    },
    "plans": {
      "path": ".wrangler/plans/README.md",
      "description": "Plans directory guide"
    }
  },

  "gitignorePatterns": [
    "cache/",
    "logs/",
    "sessions/"
  ],

  "artifactTypes": {
    "issue": {
      "directory": "issues",
      "description": "Actionable work items and bug reports"
    },
    "specification": {
      "directory": "specifications",
      "description": "Feature specifications with requirements"
    },
    "idea": {
      "directory": "ideas",
      "description": "Ideas and proposals not yet promoted to specifications"
    }
  },

  "mcpConfiguration": {
    "issuesDirectory": ".wrangler/issues",
    "specificationsDirectory": ".wrangler/specifications",
    "ideasDirectory": ".wrangler/ideas"
  }
}
