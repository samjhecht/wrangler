{
  "$schema": "./hooks-config.schema.json",
  "version": "1.0.0",
  "projectType": "python",
  "testCommand": "pytest",
  "unitTestCommand": "pytest tests/unit -v",
  "formatCommand": "black . && isort .",
  "lintCommand": "flake8",
  "protectedBranches": ["main", "master", "develop", "release/*", "hotfix/*"],
  "skipDocsOnlyChanges": true,
  "docsPatterns": ["*.md", "*.txt", "*.rst", "docs/*", "README*", "LICENSE*", "CHANGELOG*"],
  "enableCommitMsgValidation": false,
  "bypassEnvVar": "WRANGLER_SKIP_HOOKS",
  "pattern": "A"
}
